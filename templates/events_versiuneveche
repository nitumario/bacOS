    <script>
        function toggleDropdown() {
            var dropdownContent = document.getElementById('dropdown-content');
            if (dropdownContent.style.display === 'none') {
                dropdownContent.style.display = 'block';
            } else {
                dropdownContent.style.display = 'none';
            }
        }

        document.getElementById('open-create-event').addEventListener('click', function () {
            // Show the overlay and create event container
            document.getElementById('overlay').style.display = 'block';
            document.getElementById('create-event-container').style.display = 'block';

            // Make AJAX request to fetch the form content
            var xhr = new XMLHttpRequest();
            xhr.open('GET', '/creare', true);
            xhr.onreadystatechange = function () {
                if (xhr.readyState === 4 && xhr.status === 200) {
                    // Insert the form content into the container
                    document.getElementById('create-event-container').innerHTML = xhr.responseText;

                    // Add event listener to the form submission
                    var form = document.querySelector('#create-event-container form');
                    form.addEventListener('submit', function (e) {
                        e.preventDefault(); // Prevent the default form submission

                        // Create FormData object from the form
                        var formData = new FormData(form);

                        // Make AJAX POST request to submit the form data
                        var xhrSubmit = new XMLHttpRequest();
                        xhrSubmit.open('POST', '/creare', true);
                        xhrSubmit.onreadystatechange = function () {
                            if (xhrSubmit.readyState === 4 && xhrSubmit.status === 200) {
                                // Handle successful response
                                alert('Eveniment creat!');

                                // Hide the overlay and create event container
                                document.getElementById('overlay').style.display = 'none';
                                document.getElementById('create-event-container').style.display = 'none';
                            }
                        };
                        xhrSubmit.send(formData);
                    });
                }
            };
            xhr.send();
        });

        // Hide the form and overlay when clicking outside of the container
        document.getElementById('overlay').addEventListener('click', function () {
            document.getElementById('overlay').style.display = 'none';
            document.getElementById('create-event-container').style.display = 'none';
        });
    </script>
</body>

